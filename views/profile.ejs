<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-800 text-white">
    <!-- Navbar -->
    <nav class="flex items-center justify-between p-6 bg-zinc-900 shadow-md">
      <div class="flex items-center gap-5">
        <a
          href="/logout"
          class="bg-red-500 px-4 py-2 rounded-lg hover:bg-red-600 transition"
          >Logout</a
        >
        <h2 class="text-lg font-semibold">
          Welcome, <span class="text-blue-400"><%= user.name %></span>
        </h2>
      </div>
      <p class="text-sm text-zinc-400"><%= user.email %></p>
    </nav>

    <!-- Main Content -->
    <div class="p-10">
      <!-- Create Post Form -->
      <form
        action="/post"
        method="post"
        class="bg-zinc-900 p-6 rounded-lg shadow-md max-w-2xl mx-auto"
      >
        <p class="font-bold text-xl mb-4">Create Your Post</p>
        <div class="flex flex-col gap-4">
          <textarea
            placeholder="What's on your mind?"
            name="content"
            class="bg-zinc-700 text-white outline-none px-4 py-3 rounded-lg w-full h-28 resize-none"
          ></textarea>
          <input
            type="submit"
            value="Create Post"
            class="bg-blue-500 text-white font-medium px-6 py-2 rounded-lg hover:bg-blue-600 transition cursor-pointer"
          />
        </div>
      </form>

      <!-- Posts Section -->
      <div class="mt-10">
        <h3 class="text-2xl font-semibold mb-5">Your Posts</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% user.posts.forEach(function(post) { %>
          <div
            class="post bg-zinc-900 p-5 rounded-lg shadow-lg hover:shadow-xl transition"
          >
            <h4 class="mb-2 text-blue-400 font-bold">@<%= user.username %></h4>
            <p class="text-lg text-zinc-300 text-white"><%=post.content%></p>
            
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
